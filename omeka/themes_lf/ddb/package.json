{
  "name": "ddblitfass01",
  "version": "1.0.0",
  "description": "DDB Litfa√ü default theme",
  "main": "index.php",
  "author": "Viktor Grandgeorg",
  "license": "GPL-3.0",
  "dependencies": {
    "@vimeo/player": "^2.14.1",
    "bootstrap": "^4.5.3",
    "fullpage.js": "^3.0.9",
    "jquery": "^3.5.1",
    "panzoom": "^8.7.5",
    "popper.js": "^1.16.1",
    "screenfull": "^4.2.1",
    "shariff": "^3.2.1",
    "simplebar": "^3.1.5"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "clean-css-cli": "^4.3.0",
    "eslint": "^6.8.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "shx": "^0.3.3",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "terser": "^5.14.2",
    "uglify-js": "^3.11.5",
    "workbox-cli": "^5.1.4"
  },
  "sass": "src/scss/custom.scss",
  "style": "css/spa.css",
  "scripts": {
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/custom.scss css/spa.css",
    "css-lint": "stylelint --fix --config src/build/.stylelintrc --syntax scss \"src/scss/**/*.scss\"",
    "css-prefix": "postcss --config src/build/postcss.config.js --replace \"css/*spa.css\" \"!css/*.min.css\"",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output css/spa.min.css css/spa.css",
    "css-minify-nsm": "cleancss --level 1 --output css/spa.min.css css/spa.css",
    "css-main": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "css-build": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify-nsm",
    "watch-css-main": "nodemon --watch src/scss/ --ext scss --exec \"npm run css-main\"",
    "js-lint": "eslint -c src/build/.eslintrc.js src/js",
    "js-minify": "uglifyjs --compress --mangle --comments \"/^!/\" --output javascripts/bundle.min.js node_modules/jquery/dist/jquery.js src/js/fullpage.js node_modules/simplebar/dist/simplebar.js node_modules/shariff/dist/shariff.min.js node_modules/panzoom/dist/panzoom.js node_modules/@vimeo/player/dist/player.js src/js/app.js",
    "js-minify-options": "uglifyjs --compress --mangle --comments \"/^!/\" --output javascripts/options.min.js src/js/options.js",
    "js-main": "npm-run-all js-lint js-minify",
    "watch-js-main": "nodemon --watch src/js/ --ext js --exec \"npm run js-main\"",
    "sw-minify": "terser --compress --mangle --comments \"/^!/\" --output javascripts/sw.min.js javascripts/sw.js",
    "sw-generate": "php src/pwa/generateSW.php",
    "sw-main": "npm-run-all --sequential sw-generate sw-minify"
  }
}
